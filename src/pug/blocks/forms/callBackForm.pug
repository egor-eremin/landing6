#callback.callback-popup.popup.mfp-hide
	h3.color-blue.h2-title.color-white.h3-title_callback !{formsText.titleCallback[lang]}
	form.callback-form#contact-callback-form(method="post")
		.form-item
			label.input-wrapper.input-wrapper_user
				span.label-form !{formsText.labelName[lang]}
				input.form-input(type="text" required name="first_name" minlength="2" maxlength="30" placeholder= formsText.placeholderName[lang])
		.form-item
			label.input-wrapper.input-wrapper_user
				span.label-form !{formsText.labelLastName[lang]}
				input.form-input(type="text" required name="last_name" minlength="2" maxlength="30" placeholder= formsText.placeholderLastName[lang])
		.form-item
			label.input-wrapper.input-wrapper_phone
				span.label-form !{formsText.labelPhone[lang]}
				input.form-input(type="tel" required name="phone_number" minlength="7" maxlength="50" placeholder= formsText.placeholderPhone[lang])
		.form-item
			label.input-wrapper.input-wrapper_email
				span.label-form !{formsText.labelMail[lang]}
				input.form-input(type="email" required name="email" placeholder= formsText.placeholderEmail[lang])
		.form-item.select-custom-wrapper.select-wrapper-country
			label.input-wrapper
				span.label-form !{formsText.labelCountry[lang]}
				select#select-country.custom-select(name="country" data-placeholder= formsText.placeholderCountry[lang])
					option
		.form-item.select-custom-wrapper.select-custom-wrapper_required.select-wrapper-lang
			label.input-wrapper
				span.label-form !{formsText.labelLanguage[lang]}
				select#select-lang.custom-select(name="language" data-placeholder= formsText.placeholderLanguage[lang])
					option
					option(value="EN") English
					option(value="RU") Русский
					option(value="ES") Español
					option(value="DE") Deutsch
					option(value="FR") Français
					option(value="IT") Italiano
					option(value="ZH") 中文
		.form-item.form-item_time
			label.input-wrapper.input-wrapper_time
				span.label-form !{formsText.labelTime[lang]}
				input.form-input(type="text" name="time_to_call" minlength="2" maxlength="50" placeholder= formsText.placeholderTime[lang])
		.help-text.help-text_callback-form.color-white !{formsText.text_required[lang]}
		input(type="hidden" name="name_page" value="Контакты")
		.submit-btn-wrapper
			button.btn.btn-submit(type="submit") !{buttonText.btnCallback[lang]}
