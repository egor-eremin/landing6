header.page-header.markets-header
	.scene
		.scroll-decor.header-decor_tl(data-aos="fade-down" data-depth="0.03")
		.scroll-decor.header-decor_bl(data-aos="fade-up" data-depth="0.07")
		.scroll-decor.header-decor_tr(data-aos="fade-down" data-depth="0.07")
		.scroll-decor.header-decor_br(data-aos="fade-up" data-depth="0.03")
	.main-decor
		.scroll-decor.header-decor_bl-sm
		.scroll-decor.header-decor_tr-sm
	.wrapper
		.page-header__item
			.page-header__wrapper
				h1.page-header__title.h1-title !{marketsHeaderText.title[lang]}
				p.page-header__text.subtitle !{marketsHeaderText.text[lang]}
				a(href=linkSignup).btn.btn-main.btn-big !{buttonText.btnStartTrade[lang]}
			.page-header__img
				img(src=baseDir + ["assets/images/markets-header.svg"] alt="markets-header" title="markets-header")